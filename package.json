{
  "name": "elysia-demo",
  "version": "1.0.50",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "bun run --watch src/index.ts",
    "dev-frontend": "bun run build --watch",
    "build": "bun build ./src/frontend/* --outdir ./public/js --minify",
    "format": "biome format --write src",
    "lint": "biome check --apply src",
    "lint-fix": "biome check --apply-unsafe src"
  },
  "dependencies": {
    "@apollo/server": "^4.9.3",
    "@elysiajs/apollo": "^0.6.0",
    "@elysiajs/bearer": "^0.6.0",
    "@elysiajs/cookie": "^0.6.1",
    "@elysiajs/cors": "^0.6.0",
    "@elysiajs/eden": "^0.6.5",
    "@elysiajs/jwt": "^0.6.3",
    "@elysiajs/static": "^0.6.0",
    "@elysiajs/swagger": "^0.6.2",
    "@elysiajs/trpc": "^0.6.1",
    "@prisma/client": "5.2.0",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/themes": "^1.1.2",
    "@trpc/client": "^10.38.2",
    "@trpc/server": "^10.38.1",
    "elysia": "latest",
    "elysia-autoroutes": "https://github.com/framp/elysia-autoroutes/releases/download/v.1.0.0-elysia-router/elysia-autoroutes-1.0.0-elysia-router.tgz",
    "lint-staged": "^14.0.1",
    "prisma": "^5.2.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.4.1",
    "redis": "^4.6.8",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.1.2",
    "@types/react": "^18.2.21",
    "@types/react-dom": "^18.2.7",
    "bun-types": "latest"
  },
  "module": "src/index.js",
  "lint-staged": {
    "*.{ts,tsx,js}": [
      "biome check --apply",
      "biome format --write"
    ]
  }
}